<header class="navigation">
  <div class="menu-wrapper">
    <%= link_to "#{image_tag('https://raw.github.com/Magnus-G/Random/master/placeholder_logo_1.png')}".html_safe, root_path, class: "logo" %>
      <%=  %>
    <p class="navigation-menu-button" id="js-mobile-menu">MENU</p>
    <div class="nav">
      <ul id="navigation-menu">
        <li><%= link_to 'Feed', feed_path %></li>
        <li><%= link_to 'Users', users_path %></li>
        <li class="navigation-search-bar">
          <div class="search-bar">
            <div class="search-and-submit">
              <%= form_tag(search_path, method: "get") do %>
                <%= search_field_tag :search, params[:search] %>
                <%= button_tag "#{image_tag "https://raw.githubusercontent.com/Magnus-G/Random/master/search-icon.png"}".html_safe , type: "submit" %>
              <% end %>
            </div>
          </div>
        </li>
        <% if user_signed_in? %>
          <li class="sign-up"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li class="sign-up"><%= link_to "Sign In", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
